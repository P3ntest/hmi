// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id         String    @id @default(cuid())
  firstName  String
  lastName   String
  age        Int
  allergies  Allergy[]
  gender     Gender
  registered DateTime  @default(now())
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Ingredient {
  id        String    @id @default(cuid())
  name      String
  allergies Allergy[]
  Food      Food?     @relation(fields: [foodId], references: [id])
  foodId    String?
}

model Allergy {
  id          String       @id @default(cuid())
  name        String
  ingredients Ingredient[]
  patients    Patient[]
}

model Food {
  id          String       @id @default(cuid())
  name        String
  ingredients Ingredient[]
}
